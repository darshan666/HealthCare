<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLDocBSheet"
    android:background="#022040">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/idDoctorImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/idDoctorName"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/s1" />

    <TextView
        android:id="@+id/idDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/idDoctorImg"
        android:padding="4dp"
        android:text="Doctor Name::"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/idDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idDoctorName"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@+id/idDoctorImg"
        android:padding="4dp"
        android:text="Description::"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idSpecilists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Specialist::"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/idDoctorImg"
        android:layout_below="@+id/idDescription"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/idFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:text="Fees::"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/idDoctorImg"
        android:layout_below="@+id/idSpecilists"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/idDoctorImg">

        <Button
            android:id="@+id/idBtnBookAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Add Appointment"
            android:textAllCaps="false"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/idBtnViewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="#fff"/>


    </LinearLayout>








</RelativeLayout>